<p id="notice"><%= notice %></p>

<h2 class="text-center">Record</h2>

<div class="d-flex flex-row-reverse">
<%= link_to 'New Log', new_habit_path, class:"btn btn-info" %>
</div>

<!-- Form desired date -->
<div class="field form-group">
<%= form_tag habits_path, method: :get do %>
  <%= label_tag  "Date" %></br>
  <%= date_field_tag :search, params[:search], value: Date.today %>
  <%= submit_tag "Search" %>
<% end %>
</div>

<!-- Habits table-->
<table class="table table-bordered text-center table-hover shadow mt-3">
  <thead class="thead-dark">
    <tr>
      <th>Category</th>
      <th>Duration</th>
      <th>Description</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>

  <tbody>
      <% @habits.each do |habit| %>
      
        <tr>
          <td><%= habit.category %></td>
          <td><%= habit.hours %> hr <%= habit.minutes %> min</td>
          <td><%= habit.description %></td>
          <td><%= link_to 'Edit', edit_habit_path(habit) %></td>
          <td><%= link_to 'Delete', habit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
     
    <% end %>
  </tbody>
</table>

<br>


