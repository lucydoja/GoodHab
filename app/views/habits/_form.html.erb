<%= form_with(model: habit) do |form| %>
  <% if habit.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(habit.errors.count, "error") %> prohibited this habit from being saved:</h2>

      <ul>
        <% habit.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="justify-content-center mt-2 mb-2" id="habit_form">
    <div class="field form-group">
      <%= form.label :date %></br>
      <%= form.date_select :date, class:"form-control" , :required => true %>
    </div>

    <div class="field form-group">
      <%= form.label :category %>
      <%= form.text_field :category, class:"form-control", :required => true %>
    </div>

    <div class="form-group">
      <p>Duration</p>
      <div class="row">
        <div class="field col">
          <%= form.number_field :hours, class:"form-control flex-grow-1", placeholder:"Hours", :required => true %>
        </div>
        <div class="field col">
          <%= form.number_field :minutes, class:"form-control flex-grow-1", placeholder:"Minutes", :required => true %>
        </div> 
      </div>
    </div>

    <div class="field form-group">
      <%= form.label :description %>
      <%= form.text_field :description, class:"form-control", :required => true %>
    </div>

    <div class="actions d-flex">
      <%= form.submit class:'btn btn-info btn-block'%>
    </div>
  </div>
<% end %>
