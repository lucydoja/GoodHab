<%= form_with(model: habit) do |form| %>
  <% if habit.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(habit.errors.count, "error") %> prohibited this habit from being saved:</h2>

      <ul>
        <% habit.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="justify-content-center mt-2 mb-2" id="habit_form">
    <div class="field form-group">
      <%= form.label :date %></br>
      <%= form.date_select :date , order: [:day, :month, :year], end_year: Date.today.year, required: true%>
    </div>

    <div class="field form-group">
      <%= form.label :category %>
      <%= form.text_field :category, class:"form-control", required: true %>
    </div>

    <div class="form-group">
      <p>Duration</p>
      <div class="row">
        <div class="field col">
          <%= form.number_field :hours, class:"form-control flex-grow-1", placeholder:"Hours",  value: 0, max: 23, min:0, required: true %>
        </div>
        <div class="field col">
          <%= form.number_field :minutes, class:"form-control flex-grow-1", placeholder:"Minutes",  value: 0, max: 59, min:0,  required: true %>
        </div> 
      </div>
    </div>

    <div class="field form-group">
      <%= form.label :description %>
      <%= form.text_field :description, class:"form-control", maxlength:30, required: true %>
    </div>

    <div class="actions d-flex my-2">
      <%= form.submit class:'btn btn-info btn-block'%>
    </div>
    <div class="actions d-flex my-2">
      <%= link_to 'Cancel', habits_path, class:'btn btn-outline-info btn-block'%>
</div>
  </div>
<% end %>
