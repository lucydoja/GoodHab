<h2 class="text-center">Categories</h2>

<div class="d-flex flex-row-reverse">
   <!-- Add new log -->
  <div class="my-3">
    <%= link_to 'Add', new_category_path, class:"btn btn-info" %>
  </div>
</div>

<div id="table_container  mt-2">
  <table class="table table-bordered text-center table-hover shadow" id="habits_table">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th colspan="2">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |category| %>
        <% if category.user == current_user %>
          <tr>
            <td><%= category.name %></td>
            <td><%= link_to 'Edit', edit_category_path(category) %></td>
            <td><%= link_to 'Delete', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
