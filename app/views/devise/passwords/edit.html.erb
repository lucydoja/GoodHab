<h2 class="text-center">Change your password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>
  <div class="justify-content-center my-2" id="input_form">
    <div class="field form-group">
      <%= f.label :password, "New password" %><br />
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class:"form-control flex-grow-1" %>
    </div>

    <div class="field form-group">
      <%= f.label :password_confirmation, "Confirm new password" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control flex-grow-1" %>
    </div>

    <div class="actions d-flex my-2">
        <%= f.submit "Change password", class:'btn btn-info btn-block'%>
    </div>
    <%= render "devise/shared/links" %>
  </div>
<% end %>


