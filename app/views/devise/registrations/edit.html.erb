<h2 class="text-center">Edit Profile</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="justify-content-center my-2" id="input_form">
    <div class="field form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control flex-grow-1" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field form-group">
      <%= f.label "New password"%> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, autocomplete: "new-password", class:"form-control flex-grow-1" %>
      <% if @minimum_password_length %>
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="field form-group">
      <%= f.label "New password confirmation" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control flex-grow-1" %>
    </div>

    <div class="field form-group">
      <%= f.label :current_password%> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password", class:"form-control flex-grow-1" %>
    </div>

    <div class="actions d-flex my-2">
      <%= f.submit "Update", class:'btn btn-info btn-block'%>
    </div>
  </div>

<% end %>

<div class="justify-content-center my-4" id="input_form">
  <h2 class="text-center">Cancel my account</h2>

  <p>Do you want to delete your account? All your information will be deleted and non-recoverable.<%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:'btn btn-danger btn-block' %></p>
</div>


